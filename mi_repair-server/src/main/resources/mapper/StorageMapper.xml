<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mi_repair.mapper.StorageMapper">
    <insert id="addStorage" parameterType="com.mi_repair.dto.StorageDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO storage (type , name , price, amount)
        VALUES (#{type}, #{name}, #{price}, #{amount})
    </insert>

    <update id="subStorage" parameterType="com.mi_repair.dto.StorageDTO">
        UPDATE storage
        <set>
            <if test="amount != null">
                amount = amount - #{amount}
            </if>
        </set>
        WHERE id = #{id}
    </update>
    <delete id="delStorage" parameterType="com.mi_repair.dto.StorageDTO">
        DELETE FROM storage
        WHERE id = #{id}
    </delete>


    <select id="getStorageList" parameterType="com.mi_repair.Req.Request" resultType="com.mi_repair.entity.Storage">
        SELECT * FROM storage
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="name != null">
                AND name like #{name}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
        </where>
    </select>
</mapper>
