<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mi_repair.mapper.OrderRepairMapper">

    <insert id="submit" parameterType="OrderRepair" useGeneratedKeys="true" keyProperty="id">
        insert into repair_order(
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="userNumber != null and userNumber != ''">user_number,</if>
            <if test="userAddr != null and userAddr != ''">user_addr,</if>
            <if test="goodsInfo != null and goodsInfo != ''">goods_info,</if>
            <if test="sn != null and sn != ''">sn,</if>
            <if test="desc != null and desc != ''">description,</if>
            status,
            create_time,
            update_time
        )values (
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="userNumber != null and userNumber != ''">#{userNumber},</if>
            <if test="userAddr != null and userAddr != ''">#{userAddr},</if>
            <if test="goodsInfo != null and goodsInfo != ''">#{goodsInfo},</if>
            <if test="sn != null and sn != ''">#{sn},</if>
            <if test="desc != null and desc != ''">#{desc},</if>
            #{status},#{createTime},#{updateTime}
        )
    </insert>
</mapper>