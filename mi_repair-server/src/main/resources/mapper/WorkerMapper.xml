<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mi_repair.mapper.WorkerMapper">

    <insert id="register" parameterType="WorkerRegDTO"  useGeneratedKeys="true" keyProperty="id">
        INSERT INTO workers (name, password, phone)
        VALUES (#{name}, #{password}, #{phone})
    </insert>
    <select id="login" parameterType="WorkerLoginDTO" resultType="Worker">
        SELECT * FROM workers
        WHERE name = #{name}
        AND password = #{password}
    </select>

</mapper>
